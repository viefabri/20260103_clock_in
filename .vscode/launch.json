{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Launcher (GUI)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/interfaces/gui/launcher.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug Web UI (Streamlit)",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/src/interfaces/web/app.py"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug CLI: Clock In (Dry Run)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/interfaces/cli/entrypoint.py",
            "args": [
                "in"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug CLI: Clock In (LIVE)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/interfaces/cli/entrypoint.py",
            "args": [
                "in",
                "--live"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Debug CLI: Clock Out (Dry Run)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/interfaces/cli/entrypoint.py",
            "args": [
                "out"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}